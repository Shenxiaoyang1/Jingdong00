<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="40dp">
    <ImageView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lingdang"
        />
    <TextView

        android:textColor="@color/miaoshao_tvbg"
        android:id="@+id/tv_miaosha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="京东秒杀"
        />
    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_miaosha_time"
        android:text="10点场"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <TextView
        android:background="@drawable/shape_miaosha_time"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:text="1"
        android:textSize="@dimen/miaosha_tv_time"
        android:gravity="center"
        android:textColor="@color/miaosha_tv_time"
        android:id="@+id/tv_miaosha_shi"
        />
    <TextView
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=":"
        />
    <TextView
        android:background="@drawable/shape_miaosha_time"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:text="1"
        android:textSize="@dimen/miaosha_tv_time"
        android:gravity="center"
        android:textColor="@color/miaosha_tv_time"
        android:id="@+id/tv_miaosha_minter"
        />
    <TextView
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=":"
        />
    <TextView
        android:background="@drawable/shape_miaosha_time"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:text="1"
        android:textSize="@dimen/miaosha_tv_time"
        android:gravity="center"
        android:textColor="@color/miaosha_tv_time"
        android:id="@+id/tv_miaosha_second"
        />
    </LinearLayout>
</LinearLayout>